Base <- read_sav ("ELSOC_Long_2016_2022_v1.00.sav")

# Explorar los datos 
dim(Base)
names(Base)
head(Base)

# Exploraración y seleccion de las siguientes variables
#Variables 

frq(Base$c05_01)# Nivel de confianza gobierno
frq(Base$c05_02)# Nivel de confianza Partidos politicos
frq(Base$c05_07)# Nivel de confianza Congreso Nacional


frq(Base$c13) #Interes en la politica no aplicado aun

    
frq(Base$m0_edad)
frq(Base$m0_sexo)
frq(Base$m01)

#Revision de casos perdidos
table(Base$c05_01, exclude = F) 
table(Base$c05_02, exclude = F)
table(Base$m0_sexo, exclude = F) 
table(Base$m0_edad, exclude = F) 

#Eliminar casos perdidos
Base <- Base %>%
  select(c05_01,c05_02,c05_07,m0_sexo,m0_edad)  %>%
  mutate_all(., ~(as.numeric(.))) %>%
  na.omit(Base_ELPI)

#Revision de eliminación de los NA
frq(Base$c05_01)
frq(Base$c05_02)
frq(Base$c05)
frq(Base$m0_sexo)
frq(Base$m0_edad)
